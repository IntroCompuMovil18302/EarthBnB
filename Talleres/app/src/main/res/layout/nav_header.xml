<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@drawable/background_gradient2"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/img_foto_perfil_menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logo_peque" />

    <TextView
        android:id="@+id/tv_nombre_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="EarthBnB"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/tv_tipo_usuario_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="La comodidad en tu mundo" />

</LinearLayout>